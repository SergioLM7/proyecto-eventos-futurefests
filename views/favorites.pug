doctype html
html(lang="es")
   head
      title Favorites
      link(rel="stylesheet", href="/css/style.css")
   body
        include header.pug
        main
            h1 Future Fests
            section
                h3 Los favoritos del usuario
            section#all_events_container
                each result in results
                    article
                        p Evento: #{result.event_name}
                        p Descripci√≥n: #{result.description}
                        -const fecha = new Date (result.date_start)
                        p Fecha inicio: #{fecha.toDateString()}
                        a.button(href=result.url target="_blank") Enlace    
                        img(src=result.poster, alt=result.event_name width="300")
        include footer.pug
        script(src="/js/script.js")