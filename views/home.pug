doctype html
html(lang="es")
   head
      title Future Fests
   body
        include header.pug
        main
            h1 Future Fests
            section
                h3 Los últimos eventos tecnológicos
            section
                input#filterInput(type='text')
                button#filterButton Filtrar/Restablecer
            section#searched_container
            section#all_events_container
                each event in events
                    article
                        p Evento: #{event.event_name}
                        p Descripción: #{event.description}
                        p Fecha inicio: #{event.date_start}
                        p Enlace: #{event.url}
                        img(src=event.poster, alt=event.event_name width="300")
        include footer.pug
        script(src="/js/script.js")