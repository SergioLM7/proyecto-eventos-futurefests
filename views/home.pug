doctype html
html(lang="es")
   head
      title Future Fests
      link(rel="stylesheet", href="./css/style.css")
   body
        include header.pug
        p.greetings#people Hello Festers!
        main
            h1 Aqui tienes vista de los eventos
            section
                input#filterInput(type='text')
                button#filterButton Filtrar/Restablecer
            section 
            section
                h3 Lista de eventos
            section
                each event in events
                    article
                        p Evento: #{event.event_name}
                        p Descripci√≥n: #{event.description}
                        p Fecha inicio: #{event.date_start}
                        p Enlace: #{event.url}
                        img(src=event.poster, alt=event.event_name width="300")
        include footer.pug
        script(src="/js/script.js")