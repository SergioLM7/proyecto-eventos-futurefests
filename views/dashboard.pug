doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Dashboard
    link(rel="stylesheet", href="./css/style.css")
  body
      != header
      main 
        section
          form#createEvent(action="api/events", method="POST")
            input(type='text', name='event_name', placeholder='Nombre del Evento')
            input(type='text', name='description', placeholder='Descripcion')
            input(type='text', name='date_start', placeholder='Fecha de Inicio')
            input(type='text', name='date_end', placeholder='Fecha de Fin')
            input(type='text', name='url', placeholder='Url Web')
            input(type='text', name='poster', placeholder='Url Imagen')
            input(type='submit')
          button.buttonScrap Scrap!

        section#searched_container
          section#all_events_container
            each event in events
              article.event-card
                p.event-name Evento: #{event.event_name}
                p.event-description Descripci√≥n: #{event.description}
                p.event-date Fecha inicio: #{event.date_start}
                a.button(href=event.url target="_blank") Enlace
                div.event-image
                  img(src=event.poster, alt=event.event_name)
      include footer.pug
      script(src="/js/dashboard.js")
      script(src="/js/script.js")
      